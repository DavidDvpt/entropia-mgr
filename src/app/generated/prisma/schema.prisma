generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
  output        = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  ADMIN
  USER
}

model Navigation {
  id        String       @id @default(cuid())
  label     String       @unique
  url       String?
  isActive  Boolean      @default(true) @map("is_active")
  parentId  String?
  parent    Navigation?  @relation("NavItemToChildren", fields: [parentId], references: [id])
  children  Navigation[] @relation("NavItemToChildren")
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")
  order     Int          @default(autoincrement())

  @@map("navigation")
}

model User {
  id        String    @id @default(cuid())
  firstname String?   @db.VarChar(50)
  lastname  String?   @db.VarChar(50)
  pseudo    String?   @db.VarChar(50)
  email     String    @unique @db.VarChar(255)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  isActive  Boolean   @default(true) @map("is_active")
  password  String    @db.VarChar(255)
  role      RoleEnum  @default(USER)

  @@map("user")
}

model ItemCategory {
  id        String     @id @default(cuid())
  name      String     @unique
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime?  @updatedAt @map("updated_at")
  ItemType  ItemType[]

  @@map("item_category")
}

model ItemType {
  id             String       @id @default(cuid())
  name           String       @unique
  isActive       Boolean      @default(true)
  isStackable    Boolean      @default(true)
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime?    @updatedAt @map("updated_at")
  itemCategoryId String
  itemCategory   ItemCategory @relation(fields: [itemCategoryId], references: [id])
  items          Item[]

  @@map("item_type")
}

model Item {
  id         String    @id @default(cuid())
  name       String    @unique
  value      Float     @default(0)
  imageUrlId String?
  isActive   Boolean   @default(true)
  isLimied   Boolean   @default(false)
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime? @updatedAt @map("updated_at")
  itemTypeId String
  ItemType   ItemType  @relation(fields: [itemTypeId], references: [id])

  @@map("item")
}
